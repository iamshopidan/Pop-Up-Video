{
  "manifest_version": 3,
  "name": "CONTXT",
  "version": "2.0.0",
  "description": "Real-time term detection, live context, and interview assistance for onboarding calls",
  "permissions": ["sidePanel", "scripting", "tabCapture", "offscreen", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open CONTXT",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["requestPermissions.html", "requestPermissions.js", "lib/pdf.min.mjs", "lib/pdf.worker.min.mjs"],
      "matches": ["<all_urls>"]
    }
  ]
}
